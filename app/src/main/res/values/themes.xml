<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.IDEA" parent="@style/Theme.AppCompat.Light">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/green</item>
        <item name="colorPrimaryVariant">@color/darkGreen</item>
        <item name="colorOnPrimary">@color/blackGrey</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/beige</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/blackGrey</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="fontFamily">@font/poppins_regular</item>
        <item name="android:textColor">@color/blackGrey</item>

        <item name="actionBarStyle">@style/CustomActionBar</item>
        <item name="android:actionBarStyle">@style/CustomActionBar</item>

    </style>

    <style name="CustomActionBar" parent="@style/Widget.AppCompat.Light.ActionBar">
        <item name="background">@drawable/actionbar_foreground</item>
        <item name="titleTextStyle">@style/ActionBar.TitleTextStyle</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="titleCentered">true</item>
        <item name="subtitleCentered">true</item>
        <item name="android:titleTextStyle">@style/ActionBar.TitleTextStyle</item>
    </style>

    <style name="ActionBar.TitleTextStyle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="font">@font/poppins_semibold</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">@color/blackGrey</item>
        <item name="android:textSize">20sp</item>
    </style>
</resources>